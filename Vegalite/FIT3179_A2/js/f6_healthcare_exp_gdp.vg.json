{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title":"Healthcare expenditure as a share of GDP",
    "width":600,
    "height":400,
    "params": [
        {
            "name":"Year_selection",
            "value":2019,
            "bind":{
                "input":"range",
                "min":2000,
                "max": 2019,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "zoom_level",
            "value": 150,
            "bind": {
            "input": "range",
            "min": 90,
            "max": 200,
            "step": 10,
            "name": "Zoom: "
            }
            },
        {
            "name": "center_to",
            "bind":{
                "input": "select",
                "options": [
                    [-92.3, 43.6],
                    [-60.1, -16.7],
                    [134.7, -22.5],
                    [21.5,9.7],
                    [18.6,53.9],
                    [89.3, 60.8]
                  ],
                  "labels": [
                    "North America",
                    "South America",
                    "Oceania",
                    "Africa",
                    "Europe",
                    "Asia"
                  ],
                "name": "Map Centre: "
            }
        }
    ],
    "projection": {
        "type":"equalEarth",
        "center":{"expr": "center_to"},
        "scale":{"expr": "zoom_level"}
    },
    "layer": [
        {
            "data": {
              "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
              "format": {"type": "topojson", "feature": "oceans"}
            },
            "mark": {"type": "geoshape", "fill": "skyblue"}
          },
        
        {
            "data":{
                "url": "https://raw.githubusercontent.com/ocha0014/FIT3179/main/Vegalite/HW9/js/ne_110m.json",
                "format":{"type": "topojson","feature": "ne_110m_admin_0_countries"}
            },
            "transform": [
                {
                    "calculate": "'Data is not available in ' + datum.properties.NAME",
                    "as":"note"
                }
            ],
            "mark":{
                "type": "geoshape",
                "fill":"lightgray",
                "stroke":"#939393",
                "strokeWidth":0.5
            },
            "encoding": {
            "tooltip":{"field":"note"}
        }
        },
        {
            "data": {
                "url":"https://raw.githubusercontent.com/ocha0014/FIT3179/main/Vegalite/HW9/js/ne_110m.json",
               "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
            "params":[
                {
                    "name": "legend_highlight",
                    "select":{"type": "point","fields": ["CHEofGDP"]},
                    "bind":"legend"
                },{
                "name": "paintbrush",
                "select": {"type": "point", "on": "mouseover", "nearest": false}
              }],
            "data":{
                "url": "https://raw.githubusercontent.com/ocha0014/FIT3179/main/Vegalite/FIT3179_A2/upload_data/total-healthcare-expenditure-gdp_map.csv"
            },
            "transform": [
                {
                    "lookup": "Entity",
                    "from":{
                        "data":{
                            "url": "https://raw.githubusercontent.com/ocha0014/FIT3179/main/Vegalite/HW9/js/ne_110m.json",
                            "format":{
                                "type": "topojson","feature": "ne_110m_admin_0_countries"
                            }
                        },
                        "key": "properties.NAME"
                    },
                    "as":"geo"
                },
                {"filter":"datum.Year == Year_selection"}
            ],
            "mark":{"type":"geoshape","stroke":"#939393", "strokeWidth":0.5},
            "encoding": {
                "shape":{"field":"geo","type":"geojson"},
                "color":{
                    "field":"CHEofGDP",
                    "type": "quantitative",
                    "title":"Healthcare Expenditure of GDP(%)",
                    "scale":{
                        "type": "threshold",
                        "domain":[2.5,5.0,7.5, 10.0,12.5,15.0,17.5],
                        "range":["#f7fcb9","#addd8e","#78c679","#41ab5d","#238443","#006837","#004529","#000000"]
                    },
                    "legend": {"format": ".4s"}
                },
                "opacity": {
                    "condition":{"param":"legend_highlight","value":0.7},
                    "value": 0.1
                },
                "strokeWidth":{
                    "condition": {"param": "paintbrush", "value": 1.0},
                    "value": 0.5
                },
                "stroke":{
                    "condition": {"param": "paintbrush", "value": "black"},
                    "value": "#939393"
                },
                "tooltip":[
                   {"field":"Entity", "type":"nominal", "title":"Country" },
                   {"field": "CHEofGDP",
                    "type": "quantitative",
                    "title":"Healthcare Expenditure (%)",
                    "format": ".4s"
                    },
                    {"field":"Year",
                     "type": "ordinal"
                    }
                ]
            }
        }
    ],
    "config": {}
}
